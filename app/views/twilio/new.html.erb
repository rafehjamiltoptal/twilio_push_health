<% content_for :page_header do %>
  Twilio Call Manager
<% end %>
<div class="row">
  <div class="col-lg-12">
    <div class="card card-primary">
      <div class="card-header">
        <h3 class="card-title">Fill Numbers</h3>
      </div>
      <%= form_tag twilio_index_path, role: 'form', remote: true do |f| %>
        <div class="card-body">
          <div class="form-group col-6">
            <%= label_tag :from %>
            <%= text_field_tag :number_from, '', required: true, class: 'form-control', placeholder: '(651) 555-7889' %>
          </div>

          <div class="form-group col-6">
            <%= label_tag :to %>
            <%= text_field_tag :number_to, '', required: true, class: 'form-control', placeholder: '(651) 555-7889' %>
          </div>
        </div>
        <div class="card-footer">
          <%= submit_tag 'Call', class: 'btn btn-primary', data: { disable_with: "Submitting..." } %>
        </div>
      <% end %>
    </div>
  </div>
</div>